# Backend Environment Variables (Render)
# Copy this to .env for development
# Add these to Render Dashboard → Service → Environment for production

# ======================
# Server Configuration
# ======================
NODE_ENV=development
# Production: production

PORT=3000
# Render will set this automatically

API_VERSION=v1

# ======================
# Database Configuration
# ======================
DATABASE_URL=mongodb://localhost:27017/beyond-ordinary
# Production: mongodb+srv://user:pass@cluster.mongodb.net/beyond-ordinary

# PostgreSQL (if using)
# DATABASE_URL=postgresql://user:pass@localhost:5432/beyond_ordinary

REDIS_URL=redis://localhost:6379
# Optional: For caching and sessions

# ======================
# Authentication & Security
# ======================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
# Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

BCRYPT_ROUNDS=10

# ======================
# Email Service
# ======================
EMAIL_SERVICE=sendgrid
# Options: sendgrid, mailgun, ses

SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
# Get from: https://app.sendgrid.com/settings/api_keys

EMAIL_FROM=hello@beyondordinary.travel
EMAIL_FROM_NAME=Beyond Ordinary Adventures

# Mailgun (alternative)
# MAILGUN_API_KEY=xxxxxxxxxxxxx
# MAILGUN_DOMAIN=mg.beyondordinary.travel

# ======================
# Affiliate APIs
# ======================
VIATOR_API_KEY=xxxxxxxxxxxxx
# Get from: https://www.viator.com/partner

BOOKING_API_KEY=xxxxxxxxxxxxx
# Get from: https://www.booking.com/affiliate

GETYOURGUIDE_API_KEY=xxxxxxxxxxxxx
# Get from: https://partner.getyourguide.com

EXPEDIA_API_KEY=xxxxxxxxxxxxx
# Get from: https://www.expediapartnersolutions.com

SKYSCANNER_API_KEY=xxxxxxxxxxxxx
# Get from: https://partners.skyscanner.net

# ======================
# Payment Processing
# ======================
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
# Production: sk_live_xxxxxxxxxxxxx
# Get from: https://dashboard.stripe.com/apikeys

STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx
# Get from: https://dashboard.stripe.com/webhooks

STRIPE_CURRENCY=USD

# ======================
# Cloud Storage
# ======================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=xxxxxxxxxxxxx
CLOUDINARY_API_SECRET=xxxxxxxxxxxxx
# Get from: https://cloudinary.com/console

# AWS S3 (alternative)
# AWS_ACCESS_KEY_ID=xxxxxxxxxxxxx
# AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxx
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=beyond-ordinary-uploads

# ======================
# External APIs
# ======================
GOOGLE_MAPS_API_KEY=xxxxxxxxxxxxx
# Get from: https://console.cloud.google.com

WEATHER_API_KEY=xxxxxxxxxxxxx
# Get from: https://openweathermap.org/api

CURRENCY_API_KEY=xxxxxxxxxxxxx
# Get from: https://currencyapi.com

# ======================
# Social Media APIs
# ======================
INSTAGRAM_ACCESS_TOKEN=xxxxxxxxxxxxx
# Optional: For Instagram feed integration

YOUTUBE_API_KEY=xxxxxxxxxxxxx
# Optional: For YouTube video integration

# ======================
# Rate Limiting
# ======================
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds

RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window

# ======================
# CORS Configuration
# ======================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# Production: https://beyondordinary.travel,https://www.beyondordinary.travel

CORS_CREDENTIALS=true

# ======================
# Session Configuration
# ======================
SESSION_SECRET=your-session-secret-change-this
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

SESSION_MAX_AGE=86400000
# 24 hours in milliseconds

# ======================
# Logging & Monitoring
# ======================
LOG_LEVEL=info
# Options: error, warn, info, debug

SENTRY_DSN=
# Optional: For error tracking
# Get from: https://sentry.io

LOGTAIL_TOKEN=
# Optional: For log management
# Get from: https://logtail.com

# ======================
# Caching
# ======================
CACHE_TTL=3600
# Cache time-to-live in seconds

ENABLE_CACHE=true

# ======================
# Background Jobs
# ======================
ENABLE_JOBS=true

JOB_CONCURRENCY=5

# ======================
# Feature Flags
# ======================
ENABLE_NEWSLETTER=true
ENABLE_REVIEWS=true
ENABLE_BOOKINGS=true
ENABLE_PAYMENTS=true

# ======================
# Admin Configuration
# ======================
ADMIN_EMAIL=admin@beyondordinary.travel
ADMIN_PASSWORD=change-this-secure-password

# ======================
# Development Only
# ======================
DEBUG=false
MOCK_EXTERNAL_APIS=false
SEED_DATABASE=false
