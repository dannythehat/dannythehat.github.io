# Frontend Environment Variables (Vercel)
# Copy this to .env.local for development
# Add these to Vercel Dashboard → Settings → Environment Variables for production

# ======================
# API Configuration
# ======================
VITE_API_URL=http://localhost:3000
# Production: https://beyond-ordinary-api.onrender.com

VITE_API_TIMEOUT=30000

# ======================
# Analytics & Tracking
# ======================
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
# Get from: https://analytics.google.com

VITE_GTM_ID=GTM-XXXXXXX
# Get from: https://tagmanager.google.com

VITE_FACEBOOK_PIXEL_ID=
# Optional: Facebook Pixel for ads

# ======================
# Feature Flags
# ======================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NEWSLETTER=true
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_SEARCH=true

# ======================
# Social Media URLs
# ======================
VITE_INSTAGRAM_URL=https://instagram.com/beyondordinary
VITE_YOUTUBE_URL=https://youtube.com/@beyondordinary
VITE_TIKTOK_URL=https://tiktok.com/@beyondordinary
VITE_FACEBOOK_URL=https://facebook.com/beyondordinary
VITE_PINTEREST_URL=https://pinterest.com/beyondordinary
VITE_LINKEDIN_URL=https://linkedin.com/company/beyondordinary

# ======================
# Contact Information
# ======================
VITE_CONTACT_EMAIL=hello@beyondordinary.travel
VITE_SUPPORT_EMAIL=support@beyondordinary.travel

# ======================
# Site Configuration
# ======================
VITE_SITE_NAME=Beyond Ordinary Adventures
VITE_SITE_URL=https://beyondordinary.travel
VITE_SITE_DESCRIPTION=Curating Earth's most extraordinary travel experiences

# ======================
# Third-Party Services
# ======================
VITE_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
# Get from: https://dashboard.stripe.com

VITE_MAPBOX_TOKEN=
# Optional: For interactive maps
# Get from: https://www.mapbox.com

VITE_CLOUDINARY_CLOUD_NAME=
# Optional: For image optimization
# Get from: https://cloudinary.com

# ======================
# Development Only
# ======================
VITE_DEBUG_MODE=false
VITE_MOCK_API=false
